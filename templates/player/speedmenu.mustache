<div id="changerate"
     class="dropup d-none"
     role="group"
     aria-label="{{#str}}changeplaybackspeed, mod_interactivevideo{{/str}}">
    <div data{{bs}}-toggle="dropdown">
    <button type="button"
            class="btn border-0 btn-sm btn-control text-white bg-transparent py-0 px-1 mx-1 {{^displayoptions.playbackrate}}d-none{{/displayoptions.playbackrate}}"
            id="rateMenuButton"
            aria-haspopup="true"
            aria-expanded="false"
            aria-controls="ratelist"
            data{{bs}}-title="{{#str}}changeplaybackspeed, mod_interactivevideo{{/str}}"
            data{{bs}}-toggle="tooltip" data{{bs}}-container="#wrapper"
            data{{bs}}-trigger="hover">
        <i class="bi bi-speedometer2" aria-hidden="true"></i>
        <span class="visually-hidden sr-only">{{#str}}changeplaybackspeed, mod_interactivevideo{{/str}}</span>
    </button>
    </div>

    <div id="ratelist"
         class="dropdown-menu dropdown-menu-{{#bs}}end{{/bs}}{{^bs}}right{{/bs}} bg-black"
         role="menu"
         aria-labelledby="rateMenuButton">
        <button type="button" class="dropdown-item text-white changerate px-3" data-rate="0.5" role="menuitem">
            <i class="bi fa-fw" aria-hidden="true"></i><span>0.5</span>
        </button>
        <button type="button" class="dropdown-item text-white changerate px-3" data-rate="0.75" role="menuitem">
            <i class="bi fa-fw" aria-hidden="true"></i><span>0.75</span>
        </button>
        <button type="button" class="dropdown-item text-white changerate px-3" data-rate="1" role="menuitem">
            <i class="bi fa-fw bi-check" aria-hidden="true"></i><span>1</span>
        </button>
        <button type="button" class="dropdown-item text-white changerate px-3" data-rate="1.5" role="menuitem">
            <i class="bi fa-fw" aria-hidden="true"></i><span>1.5</span>
        </button>
        <button type="button" class="dropdown-item text-white changerate px-3" data-rate="2" role="menuitem">
            <i class="bi fa-fw" aria-hidden="true"></i><span>2</span>
        </button>
    </div>
</div>
