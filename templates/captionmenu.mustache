<div class="dropup d-none" id="changecaption" data-uniqid="{{uniqid}}">
    <button data{{bs}}-toggle="dropdown"
            aria-haspopup="true"
            aria-expanded="false"
            class="btn border-0 btn-sm btn-control text-white bg-transparent py-0 px-1 mx-1 {{#displayoptions}}{{^displayoptions.captions}}d-none{{/displayoptions.captions}}{{/displayoptions}}">
